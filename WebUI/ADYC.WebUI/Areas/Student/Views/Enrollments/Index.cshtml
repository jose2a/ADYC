@model IEnumerable<ADYC.API.ViewModels.TermDto>

@{
    ViewBag.Title = "Enrollments (Terms)";
}

<h2>Enrollments (Terms)</h2>

<div class="alert alert-info" role="alert">
    Please select a term to see your enrollments.
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnrollmentDropDeadLine)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsCurrentTerm)
        </th>
        <th></th>
    </tr>

    @foreach (var term in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => term.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => term.Name)
            </td>
            <td>
                @term.StartDate.ToString("MMMM dd, yyyy")
            </td>
            <td>
                @term.EndDate.ToString("MMMM dd, yyyy")
            </td>
            <td>
                @term.EnrollmentDropDeadLine.ToString("MMMM dd, yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => term.IsCurrentTerm)
            </td>
            <td>
                @Html.ActionLink("Enrollments", "ViewEnrollment", new { termId = term.Id })
            </td>
        </tr>
    }

</table>
