@model IEnumerable<ADYC.API.ViewModels.CourseDto>

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header with-border">
                <div class="btn-toolbar">
                    <div class="btn-group">
                        <a href="@Url.Action("new")" class="btn btn-primary btn-sm"><i class="glyphicon glyphicon-plus"></i> Create Course</a>
                    </div>
                </div>
            </div>
            <div class="box-body">
                <table id="courses" class="table table-bordered table-hover table-striped dataTable" role="grid">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(m => m.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(m => m.Name)
                            </th>
                            <th>
                                Type
                            </th>
                            <th class="actions">Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var course in Model)
                        {
                            @Html.Partial("pv_CourseRow", course);
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section styles {
    <link rel="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
    <link rel="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap.min.css" />
}

@section scripts
{
    <script>
        $(document).ready(function () {

            var tableHelper = TH$({
                table: "courses",
                messageDiv: "msg-div",
                addTrashEvent: true,
                addRestoreEvent: true,
                addDeleteEvent: true
            });

            $('#courses').DataTable({
                responsive: true
            });
        });
    </script>

    @Scripts.Render("~/bundles/datatables")

    <script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap.min.js"></script>
}