@model ADYC.WebUI.ViewModels.CourseFormViewModel

@{
    ViewBag.Title = Model.Title;
    ViewBag.PageHeader = Model.Title;

    ViewBag.BreadcrumbLinks = new Dictionary<string, string>
    {
        ["List of courses"] = "./",
        ["New course"] = "new",
    };

    ViewBag.ActiveBreadcrumb = "New course";
}

<div class="box box-primary">
    <div class="box-body">

        @using (Html.BeginForm("Save", "Courses", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.IsNew)

            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "Please fix the following errors:", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.Name)

                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })

            </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.CourseTypeId)

                    @Html.DropDownListFor(m => m.CourseTypeId, new SelectList(Model.CourseTypes, "Id", "Name"), "Select Course Type", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.CourseTypeId, "", new { @class = "text-danger" })

                </div>

                <div class="box-footer">
                    <button class="btn btn-primary" type="submit">Save</button>
                </div>
        }

    </div>
</div>

<div>
    @Html.ActionLink("Back to list of courses", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
