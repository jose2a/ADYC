@model IEnumerable<ADYC.API.ViewModels.GroupDto>

@{
    var title = "Groups";
    ViewBag.Title = title;
    ViewBag.PageHeader = title;

    ViewBag.BreadcrumbLinks = new Dictionary<string, string>
    {
        [title] = ""
    };

    ViewBag.ActiveBreadcrumb = title;
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header with-border">
                <div class="btn-toolbar">
                    <div class="btn-group">
                        <a href="@Url.Action("new")" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i> Create Group</a>
                    </div>
                </div>
            </div>
            <div class="box-body">
                <table id="groups" class="table table-bordered table-hover table-striped dataTable" role="grid">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(m => m.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(m => m.Name)
                            </th>
                            <th class="actions">Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var groups in Model)
                        {
                            @Html.Partial("pv_GroupRow", groups)

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section styles {
    <link rel="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
    <link rel="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap.min.css" />
}

@section scripts
{
    <script>
        $(document).ready(function () {

            var tableHelper = TH$({
                table: "groups",
                messageDiv: "msg-div",
                addDeleteEvent: true
            });

            $('#groups').DataTable();
        });
    </script>

    @Scripts.Render("~/bundles/datatables")

    <script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap.min.js"></script>
}