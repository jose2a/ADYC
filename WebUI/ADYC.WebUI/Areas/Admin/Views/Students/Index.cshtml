@model IEnumerable<ADYC.API.ViewModels.StudentDto>

@{
    var title = "Students";
    ViewBag.Title = title;
    ViewBag.PageHeader = title;

    ViewBag.BreadcrumbLinks = new Dictionary<string, string>
    {
        [title] = ""
    };

    ViewBag.ActiveBreadcrumb = title;
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header with-border">
                <div class="btn-toolbar">
                    <div class="btn-group">
                        <a href="@Url.Action("new")" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i> Create Student</a>
                    </div>
                </div>
            </div>
            <div class="box-body">
                <table id="students" class="table table-bordered table-hover table-striped dataTable" role="grid">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(m => m.Id)
                            </th>
                            <th>
                                Last Name
                            </th>
                            <th>
                                First Name
                            </th>
                            <th>
                                @Html.DisplayNameFor(m => m.Email)
                            </th>
                            <th>
                                Cellphone
                            </th>
                            <th>Grade</th>
                            <th>Group</th>
                            <th>Major</th>
                            <th class="actions">Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var student in Model)
                        {
                            @Html.Partial("pv_StudentRow", student)

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {

            var tableHelper = TH$({
                table: "students",
                messageDiv: "#msg-div",
                addTrashEvent: true,
                addRestoreEvent: true,
                addDeleteEvent: true
            });

            $('#students').DataTable();
        });
    </script>

    <script type="text/javascript" src="~/Scripts/adyc.table.utils.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap.min.js"></script>
}