@model IEnumerable<ADYC.API.ViewModels.MajorDto>

@{
    ViewBag.Title = "Majors";
}

<h2>Majors</h2>

<div id="msg-div">
</div>

<div class="btn-toolbar">
    <div class="btn-group">
        <a href="@Url.Action("new")" class="btn btn-primary btn-sm"><i class="glyphicon glyphicon-plus"></i> Create Major</a>
    </div>
</div>

<table id="majors" class="table table-bordered table-striped display">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Id)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var major in Model)
        {
            @Html.Partial("pv_MajorRow", major)

        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {

            var tableHelper = TH$({
                table: "majors",
                messageDiv: "#msg-div",
                addDeleteEvent: true
            });

            $('#majors').DataTable();
        });
    </script>

    <script type="text/javascript" src="~/Scripts/adyc.table.utils.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap.min.js"></script>
}