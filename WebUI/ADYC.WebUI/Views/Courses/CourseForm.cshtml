@model ADYC.WebUI.ViewModels.CourseFormViewModel

@{
    ViewBag.Title = Model.Title;
}

<h1>@Model.Title</h1>


@using (Html.BeginForm("Save", "Courses", FormMethod.Post))
{
    

    if (!Model.IsNew)
    {
        @Html.HiddenFor(m => m.Id)
    }

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "Please fix the following errors:", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.CourseTypeId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.CourseTypeId, new SelectList(Model.CourseTypes, "Id", "Name"), "Select Course Type", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CourseTypeId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
