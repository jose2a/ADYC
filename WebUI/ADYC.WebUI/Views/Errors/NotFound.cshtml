@{
    var title = "404 Page Not Found";

    ViewBag.Title = title;
    ViewBag.PageHeader = title;

    ViewBag.BreadcrumbLinks = new Dictionary<string, string>
    {
        [title] = "",
    };

    ViewBag.ActiveBreadcrumb = title;
}

<div class="error-page">
    <h2 class="headline text-yellow"> 404</h2>

    <div class="error-content">
        <h3><i class="fa fa-warning text-yellow"></i> Oops! Page not found.</h3>

        <p>
            We could not find the page you were looking for.
            Meanwhile, you may <a href="@Url.Action("Index", new { controller = "Dashboard", area = "" })">return to dashboard.</a>
        </p>

    </div>
    <!-- /.error-content -->
</div>
<!-- /.error-page -->