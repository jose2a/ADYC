@model ADYC.Model.Term

<tr>
    <td>
        @Html.DisplayFor(m => m.Id)
    </td>
    <td>
        @Html.DisplayFor(m => m.Name)
    </td>
    <td class="date">
        @Html.DisplayFor(m => m.StartDate)
    </td>
    <td class="date">
        @Html.DisplayFor(m => m.EndDate)
    </td>
    <td class="date">
        @Html.DisplayFor(m => m.EnrollmentDeadLine)
    </td>
    <td class="date">
        @Html.DisplayFor(m => m.EnrollmentDropDeadLine)
    </td>
    <td>
        @if (Model.IsCurrentTerm)
        {
            <i class="glyphicon glyphicon-ok"></i>
        }
        else
        {
            <i class="glyphicon glyphicon-remove"></i>
        }
    </td>
    <td>
        <a href="@Url.Action("edit", new {Model.Id})" class="btn btn-xs btn-primary">
            <i class="glyphicon glyphicon-edit"></i> Edit
        </a>

        <a href="@Url.Action("delete", new { Model.Id })" data-id="@Model.Id" class="btn btn-xs btn-danger js-delete" data-name="Are you sure you want to delete @Model.Name FOREVER?">
            <i class="glyphicon glyphicon-remove"></i> Delete
        </a>
    </td>
</tr>
